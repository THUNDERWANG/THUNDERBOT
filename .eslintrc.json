{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"linebreak-style": ["off", "windows"],
		"class-methods-use-this": ["off"],
		"max-len": ["warn", 160],
		"import/no-unresolved": ["off"],
		"consistent-return": ["off"],
		"object-curly-newline": ["off"],
		"no-plusplus": ["off"],
		"padded-blocks": ["off"],
		"no-restricted-syntax": ["warn"]
	}
}
